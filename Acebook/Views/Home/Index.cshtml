
@{
    ViewData["Title"] = "Home Page";
    var url = @Url.Action("CreatePost", "Home");
    var urlAddComment = @Url.Action("CreateComment","Home");
}

<div class="text-center">
    <h1 class="display-4">Welcome Sharpies</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building top-notch Shoobie Doobie Web apps with ASP.NET Core</a>.</p>

    <form action='@url' method="post">
        <div class="container">
            <label for="content"><b>Post </b></label>
            <input type="text" placeholder="message" style="text-align: center" name="body" required>
            <button type="submit" class="btn btn-primary postbtn">post</button>
            <div class="clearfix">
            </div>
        </div>
    </form>

    
    @foreach(var item in ViewData["Posts"] as IEnumerable<Acebook.Models.Post>)
    {
        string dataTarget = "#collapse" + item.Id;
        string divId ="collapse" + item.Id;

        <div id="accordion">
            <div class="card mt-3" id=@item.Id>
                <div class="card-header">
                    <div class="text-center">
                        <blockquote class="blockquote mb-0">
                            <p>@item.Body</p>
                            <footer class="blockquote-footer">Posted at @item.CreatedAt</footer>
                        </blockquote>
                    </div>
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target=@dataTarget aria-expanded="false" aria-controls=@divId>
                        Comments
                    </button>
                </div>
                 <div id=@divId class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="card-body">
                        @foreach(var comment in ViewData["Comments"] as IEnumerable<Acebook.Models.Comment>)
                        {
                            if (comment.postId == item.Id)
                                {
                                <div class="list-group">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">User name will display here</h6>
                                        <small>@comment.CreatedAt</small>
                                    </div>
                                    <p class="mb-1">@comment.Body</p>
                                    <hr>
                                </div>
                                }
                        }
                        <form action='@urlAddComment' method="post">
                            <div class="container">
                                <label for="content"><b>Post </b></label>
                                <input type="text" placeholder="comment" style="text-align: center" name="body" required>
                                <input type="hidden" name="postId" value=@item.Id required>
                                <input type="hidden" name="userId" value=@item.UserId required>
                                <button type="submit" class="btn btn-primary postbtn" data-toggle="collapse" data-target=@dataTarget>comment</button>
                                <div class="clearfix">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    }
    <br />

</div>
